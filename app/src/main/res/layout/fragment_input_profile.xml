            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="나의 성격유형"
            android:textColor="#191919"
            android:textSize="25sp"
            android:textStyle="bold" />

    </FrameLayout>


