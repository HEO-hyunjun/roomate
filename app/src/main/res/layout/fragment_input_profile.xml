                        android:drawableTint="#3EF75D"
                        android:scaleY="1.5"
                        android:scaleX="1.5"
                        android:layout_marginTop="8dp"
                        android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                        android:gravity="center_horizontal|top"
                        android:textSize="7sp"
                        android:text="매우 외향적" />
