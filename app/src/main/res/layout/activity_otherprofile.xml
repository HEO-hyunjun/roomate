<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="2dp">
            <ImageButton
                android:id="@+id/btn_book"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="28dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back"/>
            <TextView
                android:id="@+id/other_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:letterSpacing="-0.02"
                android:text="프로필"
                android:textColor="#191919"
                android:textSize="25sp"
                android:textStyle="bold"
                android:elevation="2dp"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/other_pic"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="30dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pr_illu_basic"/>

                <TextView
                    android:id="@+id/other_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFFFF"
                    android:text="이름"
                    android:textAlignment="center"
                    android:textColor="#767676"
                    android:textColorHint="#767676"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/pr_cap"/>

                    <TextView
                        android:id="@+id/other_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="학년"
                        android:textColor="#767676"
                        android:textSize="15sp" />



                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/pr_gender"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#767676"
                        android:text="성별"
                        android:textSize="15sp"/>


                    <ImageView
                        android:id="@+id/profile_domitory"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/pr_home"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#767676"
                        android:text="기숙사 동"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="20dp"
                        android:src="#999999"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:text="자기소개" />

                    <TextView
                        android:id="@+id/other_intro"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="top"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:text="자기소개를 작성해 주세요"
                        android:textColor="#767676"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="#999999"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="나의 유형"/>

                    </LinearLayout>

                </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addORdeleteBookmark">

            </Button>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>